<Window x:Class="WASA_Desktop.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WASA_Desktop"
        mc:Ignorable="d"
        Title="Диалоговое окно" Height="150" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="dialogMessageTextBlock" Margin="10" />
            <TextBox x:Name="dialogResponseTextBox" Margin="10" Width="150" />
            <Button Content="OK" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
